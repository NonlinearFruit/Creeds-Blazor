@typeparam TItem

@HeaderTitle

@if (IsOrdered)
{
    <ul>
        @foreach (var item in Items)
        {
            @ItemTemplate(item)
        }
    </ul>
}
else
{
    <ol>
        @foreach (var item in Items)
        {
            @ItemTemplate(item)
        }
    </ol>
}

@code {

    [Parameter]
    public RenderFragment HeaderTitle { get; set; }

    [Parameter]
    public RenderFragment<TItem> ItemTemplate { get; set; }

    [Parameter]
    public IEnumerable<TItem> Items { get; set; }

    [Parameter]
    public bool IsOrdered { get; set; }

}