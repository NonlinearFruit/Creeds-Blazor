@page "/"
@using Creeds.Data
@inject IDatabase Database

<h1>Welcome to Creeds!</h1>

<ListView Items="@Database.Creeds.Where(c => c.Url.StartsWith("Creed") || c.Url.StartsWith("Catechism") || c.Url.StartsWith("Canon") || c.Url.StartsWith("Confession")).OrderBy(c => c.Year)">
    <ItemTemplate>
        <a href="@context.Url"><li style="list-style:none">@context.Title :: @context.Year</li></a>
    </ItemTemplate>
</ListView>
